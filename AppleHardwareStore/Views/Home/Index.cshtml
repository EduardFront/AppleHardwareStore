@model List<AppleHardwareStore.Models.ProductType> 
@{
    ViewData["Title"] = "AppleStore";
}

<div class="container">
     <div class="card col-12">
          <div class="card-header">
              <h3>ProductTypes</h3>
          </div>

          <div class="card-body">
              <table class="table">
                  <thead class="thead-dark">
                  <tr>
                      <th>Id</th>
                      <th>Name</th>
                  </tr>
                  </thead>
                  <tbody>
                  @foreach (var productType in Model)
                  {
                      <tr>
                          <td>@productType.Id</td>
                          <td>@productType.Name</td>
                      </tr>
                  }
                  </tbody>
              </table>
          </div>
      </div>
</div>